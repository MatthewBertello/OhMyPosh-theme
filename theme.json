{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#ff479c",
          "foreground": "#ffffff",
          "leading_diamond": "",
          "style": "diamond",
          "template": "{{ .Location }}",
          "trailing_diamond": "",
          "type": "path"
        },
        {
          "background": "#00be00",
          "foreground": "#ffffff",
          "background_templates": ["{{ if gt .Code 0 }}#ff0000{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }}",
          "trailing_diamond": "",
          "type": "executiontime"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#00ff00",
          "template": "❯ "
        }
      ],
      "type": "prompt"
    },
    {
      "segments": [
        {
          "background": "#0077c2",
          "foreground": "#ffffff",
          "style": "plain",
          "template": "<#0077c2,transparent></>  {{ .Name }} <transparent,#0077c2></>",
          "type": "shell"
        },
        {
          "background": "#2e9599",
          "foreground": "#111111",
          "invert_powerline": true,
          "leading_diamond": "",
          "style": "diamond",
          "properties": {
            "time_format": "2006/01/02 15:04:05"
          },
          "template": " {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "",
          "type": "time"
        }
      ],
      "type": "rprompt"
    }
  ],
  "valid_line": {
    "background": "transparent",
    "foreground": "#00ff00",
    "template": "❯ "
  },
  "error_line": {
    "background": "transparent",
    "foreground": "#ff0000",
    "template": "❯ "
  },
  "version": 2
}
