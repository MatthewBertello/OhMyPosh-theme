{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "python",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "#56B6C2",
          "template": "( {{ .Venv}})",
          "properties": {
            "display_default": false
          }
        },
        {
          "background": "#474747",
          "foreground": "#56B6C2",
          "leading_diamond": "",
          "style": "diamond",
          "template": "{{ .Path }}",
          "trailing_diamond": "",
          "type": "path"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#56B6C2",
          "template": "❯ "
        }
      ],
      "type": "prompt"
    },
    {
      "segments": [
        {
          "background": "#474747",
          "foreground": "#000000",
          "properties": {
            "time_format": "2006-01-02"
          },
          "style": "plain",
          "template": " {{ .CurrentDate | date .Format }}",
          "type": "time"
        },
        {
          "background": "#474747",
          "foreground": "#000000",
          "properties": {
            "time_format": "150405"
          },
          "style": "plain",
          "template": "T{{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "background": "#56B6C2",
          "foreground": "#000000",
          "background_templates": ["{{ if gt .Code 0 }}#E06C75{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "rprompt"
    }
  ],
  "valid_line": {
    "background": "transparent",
    "foreground": "#56B6C2",
    "template": "❯ "
  },
  "error_line": {
    "background": "transparent",
    "foreground": "#E06C75",
    "template": "❯ "
  },
  "version": 2
}
